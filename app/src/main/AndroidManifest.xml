<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.colab.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Colab">
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeScreenActivity" />
        <activity
            android:name=".CreateCommunity"
            android:label="@string/create_community" />
        <activity
            android:name=".JoinCommunityActivity"
            android:label="@string/join_community_label" />
        <activity
            android:name=".SkillsActivity"
            android:label="@string/skills_page_title" />
        <activity
            android:name=".DetailsActivity"
            android:label="@string/contact_page_title"
            android:screenOrientation="portrait" />
        <activity android:name=".LoginActivity" />
    </application>

</manifest>